<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>


<ul>
  <li>
    <%= link_to "Edit task",
    edit_task_path(@task) %>
  </li>
  <li>
  <%= link_to "Back to all tasks",
    tasks_path(@task) %>
  </li>
  <li>
  <%= link_to "Delete",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %>
  </li>
</ul>
